<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:paddingBottom="8dp"
    android:id="@+id/msg_item">

    <ImageView
        android:id="@+id/msg_head_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/tab_selected_item"/>

    <TextView
        android:id="@+id/msg_user_name"
        android:layout_width="76dp"
        android:layout_height="21dp"
        android:layout_toRightOf="@id/msg_head_img"
        android:layout_marginLeft="10dp"
        android:text="Subtitle 1 "
        android:textColor="#ff000000"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/msg_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/msg_user_name"
        android:layout_toRightOf="@id/msg_head_img"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-3dp"
        android:singleLine="true"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor."
        android:textColor="#ff000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/msg_time"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_alignParentRight="true"
        android:text="Caption"
        android:textColor="#ff000000"
        android:textSize="12sp"
        />

</RelativeLayout>